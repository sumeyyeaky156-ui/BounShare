<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BounShare.Views.AboutPage"
             Title="Profil &amp; Hakkında">

    <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center">
        <Frame CornerRadius="50" HeightRequest="100" WidthRequest="100" Padding="0" HorizontalOptions="Center" IsClippedToBounds="True">
            <Image Source="https://images.pexels.com/photos/771742/pexels-photo-771742.jpeg?auto=compress&amp;cs=tinysrgb&amp;w=200" Aspect="AspectFill"/>
        </Frame>

        <Label Text="Boğaziçili Öğrenci" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="ogrenci@boun.edu.tr" TextColor="Gray" HorizontalOptions="Center" />

        <BoxView HeightRequest="1" Color="Silver" Margin="0,10" />

        <Label Text="BounShare Hakkında" FontSize="18" FontAttributes="Bold" />
        <Label Text="Bu uygulama, Boğaziçi Üniversitesi öğrencilerinin kampüs içinde eşyalarını güvenle paylaşması ve kiralaması için geliştirilmiştir." 
               FontSize="14" HorizontalOptions="Center" HorizontalTextAlignment="Center" />

        <Button Text="Çıkış Yap" 
                BackgroundColor="#BA1A1A" 
                TextColor="White" 
                Clicked="OnLogoutClicked"
                Margin="0,20" />
    </VerticalStackLayout>
</ContentPage>