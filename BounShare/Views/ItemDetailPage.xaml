<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BounShare.Views.ItemDetailPage"
             Title="Eşya Detayı">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Image Source="{Binding ImageUrl}" HeightRequest="250" Aspect="AspectFill" />

            <Label Text="{Binding Name}" FontSize="28" FontAttributes="Bold" TextColor="#003566" />
            <Label Text="{Binding Category}" FontSize="16" TextColor="Gray" />
            
            <BoxView HeightRequest="1" Color="Silver" />

            <Label Text="Açıklama" FontSize="18" FontAttributes="Bold" />
            <Label Text="Boğaziçi Üniversitesi kampüs içi teslimat uygundur. Lütfen eşyayı temiz ve zamanında iade ediniz." 
                   FontSize="16" />

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Günlük Depozito:" FontSize="18" VerticalOptions="Center" />
                <Label Text="{Binding Price, StringFormat='{0} TL'}" FontSize="22" FontAttributes="Bold" TextColor="Green" />
            </HorizontalStackLayout>

            <Button Text="Kiralamak İçin Mesaj At" 
                    BackgroundColor="#003566" 
                    TextColor="White" 
                    CornerRadius="10" 
                    HeightRequest="50"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>