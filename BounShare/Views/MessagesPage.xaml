<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BounShare.Views.MessagesPage"
             Title="MesajlarÄ±m">

    <CollectionView x:Name="MessagesCollectionView" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame HasShadow="False" BorderColor="#E0E0E0" Margin="0,5" Padding="10">
                    <HorizontalStackLayout Spacing="15">
                        <Frame CornerRadius="25" HeightRequest="50" WidthRequest="50" Padding="0" IsClippedToBounds="True">
                            <Image Source="{Binding ImageUrl}" Aspect="AspectFill" />
                        </Frame>
                        
                        <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                            <Label Text="{Binding SenderName}" FontAttributes="Bold" FontSize="16" />
                            <Label Text="{Binding ItemName}" FontSize="12" TextColor="#003566" />
                            <Label Text="{Binding LastMessage}" FontSize="14" TextColor="Gray" MaxLines="1" />
                        </VerticalStackLayout>
                        
                        <Label Text="{Binding Time}" HorizontalOptions="EndAndExpand" VerticalOptions="Start" FontSize="11" TextColor="Silver" />
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>